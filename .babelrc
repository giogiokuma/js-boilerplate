{
    "sourceMaps": "inline",
    "presets": [
        "flow",
        "react-app"
    ],
    "plugins": [
        [
            "react-css-modules",
            {
                "filetypes": {
                    ".scss": "postcss-scss"
                },
                "generateScopedName": "[hash:base64]"
            }
        ]
    ],
    "env": {
        "test": {
            "plugins": [
                [
                    "module-resolver",
                    {
                        "root": [
                            "./src",
                            "./app"
                        ]
                    }
                ]
            ]
        }
    }
}
